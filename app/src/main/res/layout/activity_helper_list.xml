<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deanaagirl.NursingDiary.TeacherActivity.HelperListActivity">

    <TextView
        android:id="@+id/textView_name_subject"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="วิชา ปฎิบัติการรักษาโรคเบื้องต้น"
        android:textSize="@dimen/size18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_date_on_ward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="วันที่ผึกปฏิบัติงาน 24/01/2018"
        android:textSize="@dimen/size18"
        app:layout_constraintStart_toStartOf="@+id/textView_name_subject"
        app:layout_constraintTop_toBottomOf="@+id/textView_name_subject" />

    <TextView
        android:id="@+id/textView_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="อาจารย์ผู้ช่วย"
        android:textSize="@dimen/size18"
        app:layout_constraintStart_toStartOf="@+id/textView_name_subject"
        app:layout_constraintTop_toBottomOf="@+id/textView_date_on_ward" />

    <ListView
        android:id="@+id/listview_name_helper"
        android:layout_width="351dp"
        android:layout_height="347dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_helper"
        app:layout_constraintVertical_bias="0.333" />
</android.support.constraint.ConstraintLayout>
